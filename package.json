{
  "name": "fmc",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "convex": "^1.31.2",
      "better-auth": "1.4.9",
      "@better-auth/expo": "1.4.9",
      "@convex-dev/better-auth": "^0.10.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @fmc/backend dev",
    "dev:setup": "turbo -F @fmc/backend dev:setup",
    "check": "ultracite check",
    "fix": "ultracite fix",
    "prepare": "husky",
    "ruler:apply": "bunx @intellectronica/ruler@latest apply --local-only"
  },
  "dependencies": {
    "@fmc/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@fmc/config": "workspace:*",
    "husky": "latest",
    "lint-staged": "latest",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "7.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.5"
}
